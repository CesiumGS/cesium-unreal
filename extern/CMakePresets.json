{
  "version": 3,
  "configurePresets": [
    {
      "name": "x64-Debug-Windows",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/../Source/ThirdParty",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows-unreal",
        "VCPKG_HOST_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "x64-Release-Windows",
      "inherits": "x64-Debug-Windows",
      "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-windows-versioned",
      "inherits": "x64-Debug-Windows",
      "toolset": "v143,version=14.36.32532",
      "environment": {
        "CESIUM_TOOLSET_VERSION": "14.36"
      }
    }
  ]
}

