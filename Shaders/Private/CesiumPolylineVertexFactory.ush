float4 ExpandPolyline(float4 WorldPosition, float4 PreviousWorldPosition, float4 NextWorldPosition, uint PolylinePointIndex, uint CornerIndex) {
    // These offsets generate the quad like so:
   	// 0 --- 3
  	// |  \  |
  	// 1 --- 2
  	// Unreal uses counter-clockwise winding order.

  	// Results in -0.5 for 0, 1 and 0.5 for 2, 3
    float OffsetX = CornerIndex / 2 - 0.5;
  	float OffsetY = -0.5f;
  	if (CornerIndex == 0 || CornerIndex == 3) {
  	  	OffsetY = 0.5;
  	}

  	float3 PositionView = mul(WorldPosition, ResolvedView.TranslatedWorldToView);
  	float3 PreviousPositionView = mul(PreviousWorldPosition, ResolvedView.TranslatedWorldToView);
  	float3 NextPositionView = mul(NextWorldPosition, ResolvedView.TranslatedWorldToView);
  
  	float2 DirectionToPrevious = normalize(PreviousPositionView.xy - PositionView.xy);
  	float2 DirectionToNext = normalize(NextPositionView.xy - PositionView.xy);
  
  	bool UsePreviousPosition = CornerIndex < 2;
  	float2 SegmentForward = UsePreviousPosition ? -DirectionToPrevious : DirectionToNext;

    // Compute the perpendicular line (counter-clockwise) to the forward direction
  	float2 ExpandDirection = normalize(float2(-SegmentForward.y, SegmentForward.x));

  	float4 PositionClip = mul(WorldPosition, ResolvedView.TranslatedWorldToClip);

  	float2 PixelOffset = float(LineWidth * 5) * float2(OffsetX, OffsetY);
  	float2 ScreenOffset = PixelOffset * ResolvedView.ViewSizeAndInvSize.zw;
  	float2 ClipOffset = ScreenOffset * PositionClip.w;
  	float4 ViewOffset = mul(float4(ClipOffset, PositionClip.z, 1), ResolvedView.ClipToView);
  	ViewOffset /= ViewOffset.w;
  
  	float3 ExpandedPosition = WorldPosition.xyz + mul(ExpandDirection * ViewOffset.xy, ResolvedView.ViewToTranslatedWorld);
  	return float4(ExpandedPosition, 1);
}

float4 VertexFactoryGetRasterizedWorldPosition(
  	FVertexFactoryInput Input,
  	FVertexFactoryIntermediates Intermediates,
  	float4 InWorldPosition)
{
  	return ExpandPolyline(InWorldPosition, Intermediates.PreviousWorldPosition, Intermediates.NextWorldPosition, Intermediates.PolylinePointIndex, Intermediates.CornerIndex);
}

