#endif
};

/** Cached intermediates that would otherwise have to be computed multiple times. */
struct FVertexFactoryIntermediates
{
  	uint PolylinePointIndex;
  	uint CornerIndex;

  	float3 Position;
  	float4 WorldPosition;
    float4 PreviousWorldPosition;
    float4 NextWorldPosition;

  	half3x3 TangentToLocal;
  	half3x3 TangentToWorld;
  	half TangentToWorldSign;

  	half4 Color;

  	/** Cached primitive and instance data */
  	FSceneDataIntermediates SceneData;
};

struct FVertexFactoryInterpolantsVSToPS
{
  	TANGENTTOWORLD_INTERPOLATOR_BLOCK
  	half4  Color : COLOR0;

#if NUM_TEX_COORD_INTERPOLATORS
  	float4  TexCoords[(NUM_TEX_COORD_INTERPOLATORS+1)/2]  : TEXCOORD0;
#endif

#if INSTANCED_STEREO
  	nointerpolation uint EyeIndex : PACKED_EYE_INDEX;
#endif
};

void GetPolylinePointAndCornerIndices(uint VertexId, out uint PointIndex, out uint CornerIndex)
{
  	PointIndex = VertexId / 4;
  	CornerIndex = VertexId - (PointIndex * 4);
  	if (CornerIndex >= 2u)
  	{
      	// Stretch the quad to the next point on the polyline.
      	PointIndex = min(PointIndex + 1, NumPolylinePoints - 1);
  	}
}

/** Helper function for position-only passes that don't require point index for other intermediates.*/
float4 GetWorldPosition(uint VertexId)
{
  	uint PolylinePointIndex, CornerIndex;
  	GetPolylinePointAndCornerIndices(VertexId, PolylinePointIndex, CornerIndex);
  
  	float3 Position = float3(0, 0, 0);
  	Position.x = PositionBuffer[PolylinePointIndex * 3 + 0];
  	Position.y = PositionBuffer[PolylinePointIndex * 3 + 1];
  	Position.z = PositionBuffer[PolylinePointIndex * 3 + 2];

  	return TransformLocalToTranslatedWorld(Position);
}

/** Computes TangentToLocal based on the Manual Vertex Fetch method in LocalVertexFactory.ush */
half3x3 CalculateTangentToLocal(uint PolylinePointIndex, out float TangentSign)
{
  	half3 TangentInputX = PackedTangentsBuffer[2 * PolylinePointIndex + 0].xyz;
  	half4 TangentInputZ = PackedTangentsBuffer[2 * PolylinePointIndex + 1].xyzw;

  	half3 TangentX = TangentBias(TangentInputX);
  	half4 TangentZ = TangentBias(TangentInputZ);

  	TangentSign = TangentZ.w;

  	// Derive the binormal by getting the cross product of the normal and tangent
  	half3 TangentY = cross(TangentZ.xyz, TangentX) * TangentZ.w;

  	// Recalculate TangentX off of the other two vectors
  	// This corrects quantization errors since TangentX was passed in as a quantized vertex input
  	half3x3 Result;
  	Result[0] = cross(TangentY, TangentZ.xyz) * TangentZ.w;
  	Result[1] = TangentY;
  	Result[2] = TangentZ.xyz;

  	return Result;
}

half3x3 CalculateTangentToWorldNoScale(half3x3 TangentToLocal)
{
  	half3x3 LocalToWorld = GetLocalToWorld3x3();
  	half3 InvScale = Primitive.InvNonUniformScale;
  	LocalToWorld[0] *= InvScale.x;
  	LocalToWorld[1] *= InvScale.y;
  	LocalToWorld[2] *= InvScale.z;
  	return mul(TangentToLocal, LocalToWorld);
}

/** Helper function for position and normal-only passes that don't require point index for other intermediates.*/
float3 GetPointNormal(uint VertexId) {
  	uint PolylinePointIndex, CornerIndex;
  	GetPolylinePointAndCornerIndices(VertexId, PolylinePointIndex, CornerIndex);
  	return PackedTangentsBuffer[2 * PolylinePointIndex + 1].xyz;
}

FVertexFactoryIntermediates GetVertexFactoryIntermediates(FVertexFactoryInput Input)
{
  	FVertexFactoryIntermediates Intermediates = (FVertexFactoryIntermediates)0;
  	Intermediates.SceneData = VF_GPUSCENE_GET_INTERMEDIATES(Input);

  	uint PolylinePointIndex, CornerIndex;
  	GetPolylinePointAndCornerIndices(Input.VertexId, PolylinePointIndex, CornerIndex);
    		  
  	Intermediates.PolylinePointIndex = PolylinePointIndex;
  	Intermediates.CornerIndex = CornerIndex;

  	Intermediates.Position.x = PositionBuffer[PolylinePointIndex * 3 + 0];
  	Intermediates.Position.y = PositionBuffer[PolylinePointIndex * 3 + 1];
  	Intermediates.Position.z = PositionBuffer[PolylinePointIndex * 3 + 2];

  	float3 ScratchPosition;
  
    float3 PreviousPosition = 0;
    if (PolylinePointIndex > 0) {
  	  	uint PreviousPointIndex = PolylinePointIndex - 1;
  	  	PreviousPosition.x = PositionBuffer[PreviousPointIndex * 3 + 0];
  	  	PreviousPosition.y = PositionBuffer[PreviousPointIndex * 3 + 1];
  	  	PreviousPosition.z = PositionBuffer[PreviousPointIndex * 3 + 2];
    } else {
  	  	// Compute a "ghost" previous position based on the first and second positions
  	  	ScratchPosition.x = PositionBuffer[1 * 3 + 0];
  	  	ScratchPosition.y = PositionBuffer[1 * 3 + 1];
  	  	ScratchPosition.z = PositionBuffer[1 * 3 + 2];
  	  	PreviousPosition = Intermediates.Position - ScratchPosition + Intermediates.Position; 
    }
  
    float3 NextPosition = 0;
    if (PolylinePointIndex < NumPolylinePoints - 1)
    {
  	  	uint NextPointIndex = PolylinePointIndex + 1;
  	  	NextPosition.x = PositionBuffer[NextPointIndex * 3 + 0];
  	  	NextPosition.y = PositionBuffer[NextPointIndex * 3 + 1];
  	  	NextPosition.z = PositionBuffer[NextPointIndex * 3 + 2];
    }
    else
    {
  	  	// Compute a "ghost" next position based on the last and second-to-last positions
  	  	ScratchPosition.x = PositionBuffer[(NumPolylinePoints - 2) * 3 + 0];
  	  	ScratchPosition.y = PositionBuffer[(NumPolylinePoints - 2) * 3 + 1];
  	  	ScratchPosition.z = PositionBuffer[(NumPolylinePoints - 2) * 3 + 2];
  	  	NextPosition = Intermediates.Position - ScratchPosition + Intermediates.Position;
    }
  
    Intermediates.WorldPosition = TransformLocalToTranslatedWorld(Intermediates.Position);
    Intermediates.PreviousWorldPosition = TransformLocalToTranslatedWorld(PreviousPosition);
    Intermediates.NextWorldPosition = TransformLocalToTranslatedWorld(NextPosition);

  	float TangentSign = 1.0;
  	Intermediates.TangentToLocal = CalculateTangentToLocal(Intermediates.PolylinePointIndex, TangentSign);
  	Intermediates.TangentToWorld = CalculateTangentToWorldNoScale(Intermediates.TangentToLocal);
  	Intermediates.TangentToWorldSign =  Intermediates.SceneData.InstanceData.DeterminantSign;

    float4 Color = CornerIndex >= 2 ? float4(1.0, 0.0, 0.0, 1.0) : float4(0.0, 0.0, 1.0, 1.0);//ColorBuffer[PolylinePointIndex];
  	Intermediates.Color = Color;// FMANUALFETCH_COLOR_COMPONENT_SWIZZLE;

  	return Intermediates;
}


#if NUM_TEX_COORD_INTERPOLATORS
/** Taken from LocalVertexFactoryCommon.ush. */

float2 GetUV(FVertexFactoryInterpolantsVSToPS Interpolants, int UVIndex)
{
	float4 UVVector = Interpolants.TexCoords[UVIndex / 2];
	return UVIndex % 2 ? UVVector.zw : UVVector.xy;
}

void SetUV(inout FVertexFactoryInterpolantsVSToPS Interpolants, int UVIndex, float2 InValue)
{
	FLATTEN
	if (UVIndex % 2)
	{
		Interpolants.TexCoords[UVIndex / 2].zw = InValue;
	}
	else
	{
		Interpolants.TexCoords[UVIndex / 2].xy = InValue;
	}
}
#endif

FVertexFactoryInterpolantsVSToPS VertexFactoryGetInterpolantsVSToPS(
  	FVertexFactoryInput Input, FVertexFactoryIntermediates Intermediates, FMaterialVertexParameters VertexParameters)
{
  	FVertexFactoryInterpolantsVSToPS Interpolants = (FVertexFactoryInterpolantsVSToPS)0;
  	Interpolants.TangentToWorld0 = float4(Intermediates.TangentToWorld[0], 0);
  	Interpolants.TangentToWorld2 = float4(Intermediates.TangentToWorld[2], Intermediates.TangentToWorldSign);
  	Interpolants.Color = Intermediates.Color;

  	#if NUM_TEX_COORD_INTERPOLATORS
  	float2 CustomizedUVs[NUM_TEX_COORD_INTERPOLATORS];
  	GetMaterialCustomizedUVs(VertexParameters, CustomizedUVs);
  	GetCustomInterpolators(VertexParameters, CustomizedUVs);

  	UNROLL
  	for (int CoordinateIndex = 0; CoordinateIndex < NUM_TEX_COORD_INTERPOLATORS; CoordinateIndex++)
  	{
  	SetUV(Interpolants, CoordinateIndex, CustomizedUVs[CoordinateIndex]);
  	}
#endif

#if INSTANCED_STEREO
  	Interpolants.EyeIndex = 0;
#endif

  	return Interpolants;
}

